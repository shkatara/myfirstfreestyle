pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo Build an app'
            }
        }
        stage('Test') {
            steps {
                sh 'echo Testing the app'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo now Deploying the app'
            }
        }
    }
}
